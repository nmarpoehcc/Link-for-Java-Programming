public class Assignment5_4 {
    public static void main(String[] args) {
        // Declare constant for the conversion factor
        final double KILOMETERS_PER_MILE = 1.609;
        
        // Create Header for the table
        System.out.printf("%-10s%-15s\n", "Miles", "Kilometers");
        
        // Add a separator line under the header for better visual presentation
        System.out.println("-------------------------------");
        
        // Loop to display miles and corresponding kilometers
        for (int miles = 1; miles <= 10; miles++) {
            // Convert miles to kilometers using the constant
            double kilometers = miles * KILOMETERS_PER_MILE;
            
            // Display miles and kilometers with consistent formatting
            System.out.printf("%-10d%-15.3f\n", miles, kilometers);
        }
    }
}
